#!/usr/bin/env bash

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Add home directory to PATH
export PATH=$PATH:~/

########## Custom building for go ##########
# custom building for go, see https://golang.org/doc/install/source

# Added the path "~/lls" as the work directory for liulishuo
export GOPATH="$HOME/lls"

export GOROOT="/usr/local/go"

# git clone to "/usr/local/go", after the building follow with the affore
# metioned tutorial, added the "/usr/local/go/bin" into PATH
export PATH="/usr/local/go/bin:$PATH"

export PATH=$PATH:${GOPATH}/bin

########## Custom building for go ##########

# Add Latex commands into PATH
export PATH="/usr/local/texlive/2017/bin/x86_64-darwin:$PATH"

# Add mysql@5.7
export PATH="/usr/local/opt/mysql@5.7/bin:$PATH"

# Add protoc into PATH
export PATH="$HOME/protoc/bin:$PATH"

# Add frp into the PATH
export PATH="$HOME/frp:$PATH"

# Configure pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)"
fi

# Use the v3 api for cli `etcdctl`
export ETCDCTL_API=3
